@model CoctelesActinver.Models.drinks
<div class="modal fade" id="modalDetail">
    <div class="modal-dialog modal-dialog-centered modal-md" style="width: 60vw !important; max-width: 60vw;">
        <div class="modal-content" style="border:solid; border-color:darkgrey;border-width:2px">

            <!-- Modal Header -->
            <div class="col-md-12 text-left pl-5">
                <button type="button" class="close pr-2 pt-2" data-dismiss="modal" id="close">&times;</button>
                <h2 class="header pt-4">@Model.strDrink</h2>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="col-md-12 col-sm-12 col-lg-12 mg-0 pd-0 row">
                    <div class="col-md-12" style="padding-top:3%;">
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="tableCotizador">
                                <div class="row">
                               
                                                  
                                      
                                        <div class="col-6">
                                            <img src="@Model.strDrinkThumb" style="max-width:300px"/>
                                        </div>
                                    <div class="col-6">
                                        <h4>Ingredientes</h4>
                                        <ul>
                                            <li>@(Model.strIngredient1?? string.Empty)<li>
                                            <li>@(Model.strIngredient2?? string.Empty)</li>
                                            <li>@(Model.strIngredient3?? string.Empty)</li>
                                            <li>@(Model.strIngredient4?? string.Empty)</li>
                                        </ul>
                                    </div>
                                       
                                        <div class="col-12 mt-5">
                                            <button class="btn btn-success" onclick="AddStorage('@Model.strDrink', @Model.idDrink)">Agregar a favoritos</button>
                                        </div>
                       
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 pt-4 text-right">
                        <button class="btn btn-az-primary" data-dismiss="modal" id="close">Cerrar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>